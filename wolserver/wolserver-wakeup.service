[Unit]
Description=wolserver (/etc/wolserver) - Auto Wakeup - Web-Application: http://<hostname>
Wants=network-online.target
After=network.target network-online.target
StartLimitIntervalSec=0
 
[Service]
Type=forking
Restart=always
RestartSec=1
User=root
ExecStart=/usr/bin/wolserver wakeup
 
[Install]
WantedBy=multi-user.target