[Unit]
Description=wolserver (/opt/wolserver) - Server Application: http://<hostname>
Wants=network-online.target
After=network.target network-online.target
StartLimitIntervalSec=0
 
[Service]
Type=forking
Restart=always
RestartSec=1
User=root
ExecStart=/usr/bin/wolserver server
ExecStop=SIGINT
 
[Install]
WantedBy=multi-user.target